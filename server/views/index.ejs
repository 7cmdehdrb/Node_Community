<!DOCTYPE html>
<html>
  <head>
    <% include ./partial/settings %>
    <style>

      .slider_img{
        display: inline-block;
        vertical-align: middle;
        height: 100%;
      }

    </style>
  </head>
  <body>
    
    <% include ./partial/header %>
    
      <div class="container mt-32 mx-auto text-center w-10/12 sm:w-9/12 md:w-8/12 lg:w-1/2 xl:w-5/12">

        <div class="mb-10">

          <h1 class="text-4xl">HELLO WORLD!</h1>

          <p class="text-xl">Welcome to my community website made with Node.js!</p>

        </div>

        <div class="inline-flex w-full mx-auto mb-10">

          <% if(session.user){ %> 
            <a href="/users/profile" class="flex-1 relative h-64 m-5 rounded-md bg-blue-400 hover:bg-blue-500">
              <i class="fas fa-users-cog text-6xl" style="line-height: 16rem;"></i>
              <span class="absolute text-xl pl-5 pb-5 bottom-0 left-0">
                마이룸
              </span>
            </a>
          <% }else{ %>
            <a href="/users/login" class="flex-1 relative h-64 m-5 rounded-md bg-blue-400 hover:bg-blue-500">
              <i class="fas fa-users-cog text-6xl" style="line-height: 16rem;"></i>
              <span class="absolute text-xl pl-5 pb-5 bottom-0 left-0">
                로그인
              </span>
            </a>
          <% } %> 

          <a href="/communities/list" class="flex-1 relative h-64 m-5 rounded-md bg-blue-400 hover:bg-blue-500">
            <i class="fas fa-comments text-6xl" style="line-height: 16rem;"></i>
            <span class="absolute text-xl pl-5 pb-5 bottom-0 left-0">
              커뮤니티
            </span>
          </a>

        </div>

        <div class="bxslider"> 
          <div class="h-64"><img class="slider_img mx-auto" src="images/html_logo.png" /></div> 
          <div class="h-64"><img class="slider_img mx-auto" src="https://poiemaweb.com/img/node-logo.png" /></div> 
          <div class="h-64"><img class="slider_img mx-auto" src="images/express_logo.png" /></div> 
          <div class="h-64"><img class="slider_img mx-auto" src="https://poiemaweb.com/img/mongo-db-logo.png" /></div> 
          <div class="h-64"><img class="slider_img mx-auto" src="https://avatars.mds.yandex.net/get-zen_doc/162989/pub_5d457e2503bdd400ada3cfdd_5d457f0944742600ad3054b0/scale_1200" /></div> 
          <div class="h-64"><img class="slider_img mx-auto" src="https://nesoy.github.io/assets/logo/github.png" /></div> 
        </div>


      </div>
    
    <% include ./partial/footer %> 


    <script type="text/javascript"> 
      $(document).ready(function(){ $('.bxslider').bxSlider({
        auto: true, 
        speed: 500, 
        pause: 3000, 
        mode:'fade', 
        autoControls: true, 
        pager:true,
      });});
    </script>

  </body>
</html>