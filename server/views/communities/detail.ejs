<!DOCTYPE html>
<html>
  <head>
    <% include ./../partial/settings %>
  </head>
  <body>

    <% include ./../partial/header %>

    <div class="container mt-32 mx-auto text-center w-10/12 sm:w-9/12 md:w-8/12 lg:w-1/2 xl:w-5/12">

        <table class="table-auto w-full mx-auto my-10">
            <tr class="w-full">
                <td class="border px-4 py-2"><span class="text-blue-500">작성자</span></td>
            </tr>        
            <tr class="w-full">
                <td class="border px-4 py-2"><%= data.user_name %> ( <%= data.user_id %> )</td>
            </tr>
            <tr class="w-full">
                <td class="border px-4 py-2"><span class="text-blue-500">내용</span></td>
            </tr>        
            <tr class="w-full">
                <td style="white-space:pre;" class="border px-4 py-2"><%= data.content %></td>
            </tr>
        </table>
        
        <div class="flex justify-end">
            <% if(session.user){ %> 
                <% if(data.user_id == session.user.id){ %> 
                <a href="/communities/update/<%= data._id %>"><div class="px-5 py-2 mx-2 mb-10 text-xl rounded-lg bg-gray-300 hover:bg-gray-400">수정하기</div></a>
                <% } %>
            <% } %> 
            <a href="/communities/list"><div class="px-5 py-2 mb-10 text-xl rounded-lg bg-gray-300 hover:bg-gray-400">목록보기</div></a>
        </div>

    </div>

    <% include ./../partial/footer %> 

  </body>
</html>