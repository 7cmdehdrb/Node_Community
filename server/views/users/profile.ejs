<!DOCTYPE html>
<html>
  <head>
    <% include ./../partial/settings %>
  </head>
  <body>
  
    <style>

      input:focus{
          outline: none;
      }

    </style>

    <% include ./../partial/header %>

    <div class="container mt-32 mx-auto text-center w-10/12 sm:w-9/12 md:w-8/12 lg:w-1/2 xl:w-5/12">
    
        <h1 class="mx-auto my-5 text-6xl text-blue-600"><i class="fas fa-user-circle"></i></h1>

        <table class="table-auto w-4/5 mx-auto my-10">
          <thead>
            <tr>
              <th class="border px-4 py-2"><span class="text-blue-600">분류</span></th>
              <th class="border px-4 py-2"><span class="text-blue-600">정보</span></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border px-4 py-2">이름</td>
              <td class="border px-4 py-2"><%= session.user.name %></td>
            </tr>
            <tr>
              <td class="border px-4 py-2">아이디</td>
              <td class="border px-4 py-2"><%= session.user.id %></td>
            </tr>
          </tbody>
        </table>

        <a href="/users/update"><div class="w-1/2 py-6 mx-auto my-10 text-xl rounded-lg bg-red-300 hover:bg-red-400">비밀번호 변경</div></a>

    </div>

    <% include ./../partial/footer %> 

  </body>
</html>